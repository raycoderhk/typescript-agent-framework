{
	"name": "@xava-labs/mcp",
	"version": "0.2.0",
	"description": "Model Context Protocol (MCP) server implementation for Cloudflare Workers",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc",
		"prepare": "npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"test": "vitest run",
		"lint": "echo 'No ESLint configured for this package'",
		"lint:fix": "echo 'No ESLint configured for this package'",
		"type-check": "tsc --noEmit",
		"codegen": "wrangler types -c wrangler.jsonc --env-interface Env env.d.ts"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"cloudflare",
		"workers",
		"hono",
		"ai",
		"llm"
	],
	"author": "Xava Labs",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xava-labs/typescript-agent-framework.git"
	},
	"bugs": {
		"url": "https://github.com/xava-labs/typescript-agent-framework/issues"
	},
	"homepage": "https://xavalabs.com",
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.43",
		"@semantic-release/git": "^10.0.1",
		"semantic-release": "^23.0.0",
		"typescript": "^5.8.3",
		"vitest": "3.0.x",
		"wrangler": "^4.9.1"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.2",
		"hono": "^4.7.6"
	}
}

{
  "name": "@null-shot/cli",
  "version": "0.2.0",
  "type": "module",
  "author": "Felix NordÃ©n",
  "description": "CLI tool for managing Model Context Protocol (MCP) servers with Cloudflare Workers and Durable Objects",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cloudflare-workers",
    "durable-objects",
    "cli",
    "typescript"
  ],
  "files": [
    "dist",
    "schema.json",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/null-shot/typescript-agent-framework.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/null-shot/typescript-agent-framework/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/null-shot/typescript-agent-framework/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "nullshot": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "preinstall": "mkdir -p dist",
    "dev": "tsx watch src/cli.ts",
    "dev:run": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^3.2.4",
    "memfs": "^4.17.2",
    "prettier": "^3.6.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "jsonc-parser": "^3.3.1",
    "ora": "^8.2.0",
    "package-manager-detector": "^1.3.0",
    "prompts": "^2.4.2",
    "simple-git": "^3.27.0"
  }
}
